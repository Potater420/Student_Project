#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define MAX_SUBJECTS 5
FILE *my_file =NULL;
FILE *temp_file =NULL;
typedef unsigned int uint32;
typedef unsigned short uint16;
typedef unsigned char uint8;

typedef enum
{
    Male,
    Female
}Gender;

struct Node{
    uint32 id;
    Gender gender_type;
    uint8 name[50];
    uint32 age;
    uint8 password[30];
    uint32 grades[MAX_SUBJECTS];
    struct Node *NodeLink;
};


void Add_Student(struct Node **List);
void read_data(struct Node **List, int *count);
void print_student(struct Node *List);
void Delete_Node(struct Node **List);
void deleteLine( int line_number);
int student_record(struct Node *List);
int searchById(struct Node *List, int id);

uint8 gender_str[10];
struct Node *ListHead = NULL;

int main()
{
    uint8 UserChoice = 0;
    int count = 0;
    int linesCount = 0;
    char buffer[300];
    my_file = fopen("test22222.txt","r");
    while (fgets(buffer, sizeof(buffer),  my_file) != NULL)
    {
        linesCount++;
    }
    printf("%d",linesCount);
    rewind(my_file);
    for(int i=0;i<linesCount;i++)
    {
        read_data(&ListHead,&count);
    }
    fclose(my_file);

    printf("-> Hello to Single Linked List \n");
    while(1){
        printf("\n");
        printf("===============================\n");
        printf("-> 1) Add student record \n");
        printf("-> 2) View all records \n");
        printf("-> 3) View student record \n");
        printf("-> 4) Remove student record \n");
        printf("-> 5) Quit from application \n");
        printf("===============================\n\n");
        printf("UserChoice : ");
        scanf("%i", &UserChoice);

        switch(UserChoice){
            case 1:
                Add_Student(&ListHead);
            break;
            case 2:
                print_student(ListHead);
            break;
            case 3:
                student_record(ListHead);
            break;
            case 4:
                Delete_Node(&ListHead);
            break;
            case 5:
                printf("Quit from application \n");
                exit(1);
            break;
            default:
                printf("User Choice out of range !!\n");
            break;
        }
    }
    return 0;

}

void Add_Student(struct Node **List)
{
     my_file = fopen("test22222.txt","a");
    struct Node *TempNode = NULL;
    struct Node *LastNode = NULL;
    TempNode = (struct Node *)malloc(sizeof(struct Node));
    if(NULL != TempNode)
    {
        printf("Enter Student Details:\n");
        int valid_id = 0;
        while (!valid_id)
        {
            printf("Enter ID: ");
            scanf("%d", &TempNode->id);
            int result = searchById(ListHead, TempNode->id);
            if (result > 0)
            {
                printf("this ID is exist \n");
            }
            else
            {
                valid_id = 1;
            }
        }
        int valid_gender = 0;
        while (!valid_gender)
        {
            printf("Enter gender (Male/Female): ");
            scanf("%s", gender_str);
            if (strcmp(gender_str, "Male") == 0)
            {
                TempNode->gender_type = Male;
                valid_gender = 1;
            }
            else if (strcmp(gender_str, "Female") == 0)
            {
                TempNode->gender_type = Female;
                valid_gender = 1;
            }
            else
            {
                printf("Invalid gender. Please enter again.\n");
            }
        }
        fflush(stdin);
        printf("Enter Name: ");
        gets(TempNode->name);
        printf("Enter Age: ");
        scanf("%d", &TempNode->age);
        printf("Enter pass: ");
        scanf("%s", &TempNode->password);
        for (int i = 0; i < MAX_SUBJECTS; i++) {
            printf("Enter grade for Subject %d: ", i + 1);
            scanf("%d", &TempNode->grades[i]);
        }
        TempNode->NodeLink = NULL;
        if(NULL == *List)
        {
            *List = TempNode;
        }
        else
        {
            LastNode = *List;
            while(LastNode->NodeLink != NULL)
            {
                LastNode = LastNode->NodeLink;
            }
            LastNode->NodeLink = TempNode;
        }

    }
    if(NULL!=my_file)
    {
        fprintf(my_file, "%d,%s,%s,%d,%s,%d,%d,%d,%d,%d\n",TempNode->id
                                            ,TempNode->gender_type== Male ? "Male" : "Female"
                                            ,TempNode->name
                                            ,TempNode->age
                                            ,TempNode->password
                                            ,TempNode->grades[0]
                                            ,TempNode->grades[1]
                                            ,TempNode->grades[2]
                                            ,TempNode->grades[3]
                                            ,TempNode->grades[4]);
    }
    fclose(my_file);
}

void read_data(struct Node **List, int *count)
{
    struct Node *LastNode = NULL;
    struct Node *TempNode = NULL;
    TempNode = (struct Node *)malloc(sizeof(struct Node));


    if(NULL != TempNode)
    {
        fscanf(my_file, "%d ,%[^,] ,%[^,],%d ,%[^,] ,%d ,%d ,%d ,%d ,%d \n",&TempNode->id, gender_str, TempNode->name
                                                ,&TempNode->age, TempNode->password, &TempNode->grades[0]
                                                , &TempNode->grades[1], &TempNode->grades[2]
                                                , &TempNode->grades[3], &TempNode->grades[4]);
        if (strcmp(gender_str, "Male") == 0)
        {
        TempNode->gender_type = Male;
        }
        else if (strcmp(gender_str, "Female") == 0)
        {
        TempNode->gender_type = Female;
        }

        TempNode->NodeLink = NULL;
        if(NULL == *List)
        {
            *List = TempNode;
        }
        else
        {
            LastNode = *List;
            while(LastNode->NodeLink != NULL)
            {
                LastNode = LastNode->NodeLink;
            }
            LastNode->NodeLink = TempNode;
        }
    }

}
void print_student(struct Node *List)
{
    struct Node *TempNode = List;
    printf("\nNode Values \n");
    if(NULL == TempNode)
    {
        printf("List is empty !! \n");
    }
    else
    {
        while(TempNode != NULL)
        {
            printf("===============================\n");
            printf("id=%d\n",TempNode->id);
            printf("gender=%s\n",TempNode->gender_type== Male ? "Male" : "Female");
            printf("name=%s\n",TempNode->name);
            printf("age=%d\n",TempNode->age);
            printf("id=%s\n",TempNode->password);
            for (int i = 0; i < MAX_SUBJECTS; i++)
            {
                printf("the grade of Subject %d=%d\n", i + 1,TempNode->grades[i]);
            }
            printf("===============================\n");
            TempNode = TempNode->NodeLink;
        }
    }
}
void Delete_Node(struct Node **List){
    struct Node *TempNode = *List;
    struct Node *NodeListCounter = *List;
    struct Node *NextNode = *List;
    uint32 NodePosition = 0;
    uint32 NodeCounter = 1;
    uint32 deleted_id=0;

    printf("Enter the id: ");
    scanf("%i", &deleted_id);
    NodePosition = searchById(ListHead, deleted_id);
    if (NodePosition == 0)
    {
        printf("Element with ID %d not found\n", deleted_id);
    }
    else
    {
        if(NodePosition==1)
        {
            *List = TempNode->NodeLink;
            free(TempNode);
        }
        else
        {
            while(NodeCounter < (NodePosition - 1))
            {
                NodeCounter++;
                NodeListCounter = NodeListCounter->NodeLink;
            }
            NextNode = NodeListCounter->NodeLink;
            NodeListCounter->NodeLink = NextNode->NodeLink;
            free(NextNode);
        }

        deleteLine( NodePosition);
    }
}

void deleteLine( int line_number)
{
    char *old_file_name = "test22222.txt";
    char *new_file_name = "new.txt";
    my_file = fopen(old_file_name,"r");
    temp_file = fopen(new_file_name, "w");

    char line[1000];
    int current_line = 1;
    while (fgets(line, sizeof(line), my_file) != NULL)
    {
        if (current_line != line_number)
        {
            fputs(line, temp_file);
        }
        current_line++;
    }
    fclose(my_file);
    fclose(temp_file);
    remove(old_file_name);
    rename(new_file_name,old_file_name);
    printf("student deleted successfully.\n");

}
int searchById(struct Node *List, int id)
{
    struct Node* TempNode = List;
    uint32 NodeCount = 0;

    while (TempNode != NULL)
    {
        NodeCount++;
        if (TempNode->id == id)
        {
            return  NodeCount;
        }
        TempNode = TempNode->NodeLink;
    }
    return 0;
}
int student_record(struct Node *List)
{
    int id=0;
    int found = 0;
    printf("Enter the id: ");
    scanf("%i", &id);
    struct Node* TempNode = List;
    while (TempNode != NULL)
    {
        if (TempNode->id == id)
        {
            printf("===============================\n");
            printf("id=%d\n",TempNode->id);
            printf("gender=%s\n",TempNode->gender_type== Male ? "Male" : "Female");
            printf("name=%s\n",TempNode->name);
            printf("age=%d\n",TempNode->age);
            printf("password=%s\n",TempNode->password);
            for (int i = 0; i < MAX_SUBJECTS; i++)
            {
                printf("the grade of Subject %d=%d\n", i + 1,TempNode->grades[i]);
            }
            printf("===============================\n");
            found = 1;
        }
        TempNode = TempNode->NodeLink;
    }
    if (!found)
    {
        printf("Student with ID %d not found\n", id);
    }

}



